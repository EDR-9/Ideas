    }*/
    //else if(choice == 'T') {
        t = a;
        
        for(i = 1; i < n + 1; i++) {
            cout << "\nArmónico " << i << "\n";
            for(j = 0; j < k + 1; j++) {
                señal = sin((2*pi*f0*i*t) + phase);
                printf("%LF \t%LF\n", t, señal);
                t += step;
            }
            t = a;
        }
    //}
