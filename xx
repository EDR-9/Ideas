    cin >> a;
    cout << "Límite superior: ";
    cin >> b;
    cout << "Número de muestras o particiones por intervalo: ";
    cin >> k;
    step = (b - a)/k;
    cout << "Step: " << step;
    /*cout << "\n\n¿Mostrar sólo un armónico o mostrar todos? (uno = U, todos = T): ";
